body {
	font-family: 'Roboto', sans-serif;
}

.main h1 {
	color: white;
	font-weight: 700;
	margin-top: 50px;
}

.main {
	background: url('coffee.jpg') no-repeat center center;
	background-size: cover;
	text-align: center;
}

.main .container {
	height: 600px;
}

.main .btn {
	border-radius: 10px;
	color: black;
	margin-top: 50px;
	font-weight: 900;
}

.header li a {
	text-decoration: none;
	color: black;
}

.header li {
	display: inline-block;
	padding: 20px 50px 10px 0px;
	font-size: 14pt;
	font-weight: 700;
}
.name {
	float: right;
}

.footer {
	margin-top: 50px;
	text-align: center;
}

.footer ul img {
	width: 80%;
	height: auto;
}

.footer li {
	display: inline-block;
	width: 10%;
	margin: 0 50 0 50;
}

.footer p {
	float: right;
	padding-top: 20px;
}